::-webkit-scrollbar {
    height: 0px !important;
    width: 0px !important;
    display: none !important;
}
*
  box-sizing: border-box

body,html
  margin   : 0
  padding  : 0
  font-size: 14px
  min-max-width(100vw)
  min-max-height(100vh)
  font-family: "Roboto"
  font-weight: 200
  overflow: hidden

body
  position: relative
  -webkit-overflow-scrolling: touch
  overflow-y: scroll


ul
  margin     : 0
  padding    : 0
  list-style : none

a
  color          : $blue.base
  text-decoration: none

.ui-aurelia
  position        : relative
  flex-direction  : column
  background-color: $grey.lighten-4
  flex-container()
  min-max-height(100%)
  min-max-width(100%)

